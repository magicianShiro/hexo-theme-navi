#footer
  position: relative;
  padding: 20px 0
  border-top: 1px solid color-border
  color: color-default
  font-size: font-size + 2
  text-align: center
  .outer
    margin-bottom: 0
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em
  #hitokoto
    padding: 0 30px
    @media mq-mini
      display: none
