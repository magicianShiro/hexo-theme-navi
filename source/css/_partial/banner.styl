#site-banner
  height: 650px
  @media mq-mini
    height 260px + header-height + header-sub-height
  @media mq-mobile
    height 260px + header-height + header-sub-height

#site-banner-img
  position: relative
  background-image: url(banner-url)
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  width: 100%
  height: 100%
  @media mq-mini
    height 260px + header-height + header-sub-height
  @media mq-mobile
    height 260px + header-height + header-sub-height
  .shadow
    position: absolute
    width: 100%
    height: 1px
    background-color: color-background
    &.top-shadow
      top: 0
      box-shadow: 0 0px 80px 50px color-background
      @media mq-mini
        box-shadow: 0 0px 0px 0px color-background
      @media mq-mobile
        box-shadow: 0 0px 0px 0px color-background
    &.bottom-shadow
      bottom: 0
      box-shadow: 0 0px 150px 150px color-background
      @media mq-mini
        box-shadow: 0 0px 80px 80px color-background
      @media mq-mobile
        box-shadow: 0 0px 80px 80px color-background

#site-banner-master
  text-align: center
  width: 70%
  margin: auto
  background-color: rgba(255, 255, 255, 0.53)
  position: relative
  top: -170px
  padding: 20px
  border-radius: 5px
  box-shadow: 0 0px 50px 10px #f5f8f9 inset
  @media mq-mini
    padding: 10px
    display: none
  @media mq-mobile
    padding: 10px
    display: none
  
.site-banner-master-avatar
  display: block
  margin: 10px auto 20px
  width: profile-avatar-size
  height: profile-avatar-size
  
  if use-radius-avatar
    border-radius: profile-avatar-size
    &:hover
      animation: resize .2s linear

.site-banner-master-description
  margin-top: 20px
  color: #38b7ea
